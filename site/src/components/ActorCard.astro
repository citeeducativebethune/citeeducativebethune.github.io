---
import { Image } from 'astro:assets'
import type { CollectionEntry } from 'astro:content'
import { getEntry } from 'astro:content'
import { formatDate } from 'src/libs/date.ts'
import { routes } from 'src/libs/routes.ts'

export type Props = {
	slug: CollectionEntry<'actors'>['slug']
}

const { slug } = Astro.props

const actor = await getEntry('actors', slug)
---

<div
	class="overflow-hidden rounded-xl border transition-transform duration-300 hover:scale-95"
	title={actor.data.title}
>
	<a href={routes.actor(actor.slug)}>
		<Image
			src={actor.data.image}
			alt={actor.data.title}
			class="aspect-[5_/_3] h-auto w-full object-cover"
		/>
	</a>

	<div class="grid gap-4 px-3 py-4">
		<a
			href={routes.actor(actor.slug)}
			class="line-clamp-2 text-2xl font-bold leading-tight hover:text-secondary-2"
		>
			<h3>
				{actor.data.title}
			</h3>
		</a>
		{
			(actor.data.location || actor.data.site) && (
				<ul class="grid gap-2.5">
					{actor.data.location && (
						<li class="flex items-center gap-2">
							<svg
								xmlns="http://www.w3.org/2000/svg"
								fill="none"
								viewBox="0 0 24 24"
								stroke-width="1.5"
								stroke="currentColor"
								class="size-6"
							>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z"
								/>
								<path
									stroke-linecap="round"
									stroke-linejoin="round"
									d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z"
								/>
							</svg>
							{actor.data.location}
						</li>
					)}
					{actor.data.site && (
						<li>
							<a
								class="flex items-center gap-2 text-secondary-2"
								href={actor.data.site}
							>
								<svg
									xmlns="http://www.w3.org/2000/svg"
									fill="none"
									viewBox="0 0 24 24"
									stroke-width="1.5"
									stroke="currentColor"
									class="size-6"
								>
									<path
										stroke-linecap="round"
										stroke-linejoin="round"
										d="M12 21a9.004 9.004 0 0 0 8.716-6.747M12 21a9.004 9.004 0 0 1-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 0 1 7.843 4.582M12 3a8.997 8.997 0 0 0-7.843 4.582m15.686 0A11.953 11.953 0 0 1 12 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0 1 21 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0 1 12 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 0 1 3 12c0-1.605.42-3.113 1.157-4.418"
									/>
								</svg>
								Site web
							</a>
						</li>
					)}
				</ul>
			)
		}
	</div>
</div>
